
@using NoiThat_v2._0.Models

@{
    Layout = null;
    if (Session["admin"] == null)
    {
        Response.Redirect("/TrangChu/Index");
    }
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    <!--Liên kết font SB Admin 2-->
    <link href="~/Content/Admin/Layout/vendor/fontawesome-free/css/all.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!--Bootstrap 4.5.3-->
    <link href="~/Content/Admin/Main/css/bootstrap.css" rel="stylesheet" />

    <!--Datatable của jQuery theo định dạng Bootstrap-->
    <link href="~/Content/Admin/Main/css/dataTables.bootstrap4.css" rel="stylesheet" />

    <!--Hiển thị DatePicker để chọn ngày-->
    <link href="~/Content/Admin/Main/css/jquery-ui.css" rel="stylesheet" />

    <!--Hiển thị nút của Datatable theo dạng Bootstrap-->
    <link href="~/Content/Admin/Main/css/buttons.bootstrap4.css" rel="stylesheet" />

    <!--Đinh dạng CSS của SB Admin 2-->
    <link href="~/Content/Admin/Layout/css/sb-admin-2.css" rel="stylesheet" />

</head>

<body id="page-top">

    <!--jQuery 3.5.1-->
    <script src="~/Content/Admin/Main/js/jquery-3.5.1.js"></script>
    <!--Datatable-->
    <script src="~/Content/Admin/Main/js/jquery.dataTables.js"></script>
    <!--Datatable dạng Bootstrap-->
    <script src="~/Content/Admin/Main/js/dataTables.bootstrap4.js"></script>
    <!--Thư viện hỗ trợ Ajax.Beginform-->
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <!--Thư viện hỗ trợ hiển thị DatePicker-->
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>

    <!--Danh sách nút cho bảng Datatable-->
    <!--Nút Datatable-->
    <script src="~/Scripts/dataTables.buttons.js"></script>
    <!--Nút Datatable dạng Bootstrap-->
    <script src="~/Scripts/buttons.bootstrap4.js"></script>
    <!--Thư viện hỗ trợ xuất file Excel-->
    <script src="~/Scripts/jszip.js"></script>
    <!--Hiển thị nút chuẩn HTML5-->
    <script src="~/Scripts/buttons.html5.js"></script>
    <!--Hiển thị option ẩn cột-->
    <script src="~/Scripts/buttons.colVis.js"></script>
    <!--Thư viện hỗ trợ xuất file PDF-->
    <script src="~/Scripts/pdfmake.js"></script>
    <!--Thư viện hỗ trợ xuất font cho file PDF-->
    <script src="~/Scripts/vfs_fonts.js"></script>

    <!--Khai báo để sử dụng Bootstrap-->
    <script src="~/Content/Admin/Main/js/jquery-3.5.1.slim.js"></script>
    <script src="~/Content/Admin/Main/js/popper.js"></script>
    <script src="~/Content/Admin/Main/js/bootstrap.js"></script>

    <!--Hỗ trợ kiểm tra form trước khi gửi-->
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


    <!--File dùng chung-->
    <script src="~/Scripts/public.js"></script>


    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="#">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">iHome</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <label>Admin</label>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "DonHang")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Đơn hàng</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "SanPham")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Sản phẩm</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "NhomSanPham")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Nhóm</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "DanhMuc")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Danh mục</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "NhaCungCap")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Nhà cung cấp</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "TaiKhoan")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Tài khoản</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "PhanQuyen")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Phân quyền</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Topbar Search -->
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..."
                                   aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @{
                                    if (Session["admin"] != null)
                                    {
                                        TaiKhoan item = (TaiKhoan)Session["admin"];
                                        <span class="mr-2 d-none d-lg-inline text-gray-600 small">@item.HoTen</span>
                                    }
                                }
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Đăng xuất
                                </a>
                            </div>
                        </li>
                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!--Toast thông báo-->
                    <div class="toast" id="toast" style="position: absolute; top: 100px; right: 10px;">
                        <h5 class="alert alert-success show m-0" id="mess" role="alert"></h5>
                    </div>

                    @RenderBody()

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Bản quyền bởi &copy; Phan Đăng Khoa DH18TH2</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Đăng xuất</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Bạn có chắc chắn đăng xuất không?</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                    <a class="btn btn-primary" onclick="Logout()">OK</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal confirm -->
    <div class="modal fade" id="ConfirmModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bạn có chắc chắn xóa không?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="button" id="Delete" onclick="Delete()" data-dismiss="modal" class="btn btn-primary">Xóa</button>
                </div>
            </div>
        </div>
    </div>


    <!--Thư viện của SB Admin 2-->
    <script src="~/Content/Admin/Layout/js/sb-admin-2.js"></script>


    <script>
        function Logout() {
            $.noConflict();
            $.post("/Login/Logout").done(window.location.href = "/TrangChu/Index");
        }
    </script>

    </body>
</html>
