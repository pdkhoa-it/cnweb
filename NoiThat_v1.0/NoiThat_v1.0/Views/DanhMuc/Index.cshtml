@model NoiThat_v1._0.Models.DanhMucSanPham

@{
    ViewBag.Title = "Index";
}

<!--Toast thông báo-->
<div class="toast" id="toast" style="position: absolute; top: 10px; right: 10px;">

    <h5 class="alert alert-success show m-0" id="mess" role="alert">
    </h5>
</div>

<div class="container">
    @using (Ajax.BeginForm("AddOrEdit", "DanhMuc", new AjaxOptions { HttpMethod = "POST", OnSuccess = "Success" }))
    {
        <div class="form-group">
            @Html.Hidden("ID", "0")
            @Html.Editor("Ten", new { htmlAttributes = new { @class = "form-control w-25" } })
            @Html.ValidationMessage("Ten", "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.DropDownList("IDNhomSP", ViewBag.listNhom as SelectList,"Chọn nhóm sản phẩm", new { @class = "form-control w-25" })
            @Html.ValidationMessage("IDNhomSP", "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="reset" class="btn btn-secondary" value="Reset" />
            <input type="submit" class="btn btn-success" value="Submit" />
        </div>
    }

    <table id="tableDM" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Tên Danh mục</th>
                <th>Tên nhóm</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="ConfirmModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bạn có chắc chắn xóa không?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" id="Delete" class="btn btn-primary">Xóa</button>
            </div>
        </div>
    </div>
</div>

<script>
    var table;
    $.noConflict();
    $(document).ready(function () {

        table = $('#tableDM').DataTable({
            "ajax": {
                "url": "/DanhMuc/GetDanhSach",
                "type": "GET",
                "dataType": "json"
            },
            "columns": [
                { "data": "Ten" },
                { "data": "TenNhom" },
                {
                    "data": "ID", "render": function (id) {
                        return "<a class='btn btn-primary' onclick=BeginEdit('" + id + "') ><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger' onclick=Delete('" + id + "')><i class='fa fa-trash'></i> Delete</a>";
                    },
                    "orderable": false,
                    "searchable": false
                }],
            lengthMenu: [[5, 10, 20, 50, -1], [5, 10, 20, 50, "All"]]
        });
    });

    function Success(data) {
        if (data.success) {
            $('#mess').removeClass("alert-danger").addClass("alert-success");

            $('#IDNhomSP').val(null);
            $('#Ten').val('');
            $('#ID').val('0');

            table.ajax.reload();
        }
        else $('#mess').removeClass("alert-success").addClass("alert-danger");

        $('#mess').html(data.message);
        $('#toast').toast({ delay: 3000 });
        $('#toast').toast('show');
    }

    function BeginEdit(id) {
        var url = "/DanhMuc/BeginEdit";
        $.get(url, { id: id }).done(function (dm) {
            $('#Ten').val(dm.Ten);
            $('#IDNhomSP').val(dm.IDNhomSP)
            $('#ID').val(dm.ID);
        });
    }

    function Delete(id) {
        $('#ConfirmModal').modal('show');
        $('#Delete').click(function () {
            $.ajax({
                type: 'POST',
                url: '/DanhMuc/Delete',
                data: JSON.stringify({
                    id: id
                }),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.success) {
                        $('#mess').removeClass("alert-danger").addClass("alert-success");
                        table.ajax.reload();
                    }
                    else $('#mess').removeClass("alert-success").addClass("alert-danger");

                    $('#mess').html(data.message);
                    $('#toast').toast({ delay: 5000 });
                    $('#toast').toast('show');
                }
            });
            $('#ConfirmModal').modal('hide');
        });
    }
</script>
