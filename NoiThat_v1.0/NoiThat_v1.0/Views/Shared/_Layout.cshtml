<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--Css của Bootstrap-->
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />

    <!--Css jQuery Datatable-->
    <link href="~/Content/css/dataTables.bootstrap4.css" rel="stylesheet" />

    <!--Css hiển thị DatePicker-->
    <link href="~/Content/css/jquery-ui.css" rel="stylesheet" />
</head>
<body>

    <!--jQuery 3.5.1-->
    <script src="~/Content/js/jquery-3.5.1.js"></script>

    <!--jQuery Datatable-->
    <script src="~/Content/js/jquery.dataTables.js"></script>
    <script src="~/Content/js/dataTables.bootstrap4.js"></script>

    <!--File hỗ trợ cho Ajax Beginform-->
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <!--Dùng để hiển thị DatePicker-->
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>

    <!--File mặc định của Bootstrap 4-->
    <script src="~/Content/js/jquery-3.5.1.slim.js"></script>
    <script src="~/Content/js/popper.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>

    <!--Kiểm tra lỗi của form-->
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <!--File Script Success, BeginDelete, Delete-->
    <script src="~/Scripts/publicScript.js"></script>

    <!--Toast thông báo-->
    <div class="toast" id="toast" style="position: absolute; top: 10px; right: 10px;">
        <h5 class="alert alert-success show m-0" id="mess" role="alert"></h5>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    <!-- Modal confirm -->
    <div class="modal fade" id="ConfirmModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bạn có chắc chắn xóa không?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="button" id="Delete" onclick="Delete()" data-dismiss="modal" class="btn btn-primary">Xóa</button>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
